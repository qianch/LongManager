@page
@model LongManagerWeb.Pages.LoginHistoryModel
@{
    ViewData["Title"] = "LoginHistory";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            日志
            <small>登录日志记录</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">首页</a></li>
            <li class="active">登录日志</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">登录日志</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="login-history" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>登录时间</th>
                                    <th>用户账号</th>
                                    <th>用户名</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var history in Model.Historys)
                                {
                                    <tr>
                                        <td>@history.LoginDate</td>
                                        <td>@history.LoginUserName</td>
                                        <td>@history.LoginDisplayName</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>登录时间</th>
                                    <th>用户账号</th>
                                    <th>用户名</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts{
    <!-- DataTables -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#login-history').DataTable();
        })
    </script>
}
